{{>header}}
   

<div class="container">
    <br>
    <br>
    <br>
    <center><h1 class="title">Mis pintores favoritos</h1></center>

        <br>
        <br>

    <hr color="salmon">

        <br>
        <br>

  <center><h4 class="desc">Aqui tenemos una tabla de mis pintores favoritos, lo cual esta enlazado a MongoDB</h4></center>

        <br>

    {{#if pintores}}

        <table class="table table-dark table-hover" >
            <thead>
                <tr>
                    <td class="td">ID</td>
                    <td class="td">Nombre</td>
                    <td class="td">Nacionalidad</td>
                    <td class="td">Corriente</td>
                    <td class="td">Pitura famosa</td>
                </tr>
            </thead>
            <tbody>
                {{#each pintores}}
                <tr class="td2">
                    <td>{{_id}}</td>
                    <td>{{nombre}}</td>
                    <td>{{nacionalidad}}</td>
                    <td>{{corrientes}}</td>
                    <td><img src="../images/{{pintura}}" height="400" width="275"> </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <div>no se encuentran pintores</div>
    {{/if}}
</div>


